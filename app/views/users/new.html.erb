<% provide(:title, 'Sign up') %>

<h1>Set up new account</h1>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <h2>Errors:</h2>
    <ul>
      <% @user.errors.full_message.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<div class="row">
  <div class="col-mid-6 col-md-offset-3">
    <p>
      <%= f.label :fname, "First name:" %>
      <%= f.text_field :fname %>
    </p>
    <p>
      <%= f.label :fname, "Last name:" %>
      <%= f.text_field :lname %>
    </p>
    <p>
      <%= f.label :nickname, "Nickname:" %>
      <%= f.text_field :nickname %>
    </p>
    <p>
      <%= f.label :email, "Email Address:" %>
      <%= f.email_field :email %>
    </p>
    <p>
      <%= f.label :password, "Password:" %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password,"Confirm Password:" %>
      <%= f.password_field :password_confirmation %>
    </p>

    <p>
      <%= f.submit "Create Your Account!", class: "btn btn-primary" %> <br/>
    </p>
  </div>
</div>

<% end %>
