<header class="navbar navbar-fixed-top navbar-default">
  <div class="container-fluid">
    <nav>
      <div class="navbar-header">
        <a class="navbar-brand" href="/">PPI</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path, class: "nav-item" %></li>
        <li><%= link_to "Leaderboard", users_path, class: "nav-item" %></li>
        <li><%= link_to "About", about_path, class: "nav-item" %></li>
        <!--<li><%= link_to "Help", '#' %></li> Temporarily removed, as it serves no purpose -->
        <%if user_is_logged_in? %>
          <li><%= link_to "Game", game_path, method: :get, class: "nav-item"%></li>
          <li><button class="btn btn-primary navbar-btn"><%= link_to "Logout", { :controller => "application", :action => "logout", id: session[:id]}, data: {confirm: "Are you sure you wish to logout?"}, :method => :delete%></button></li>
        <% else %>
          <li><button class="btn btn-primary navbar-btn"><%= link_to "Login", root_path %></button></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
